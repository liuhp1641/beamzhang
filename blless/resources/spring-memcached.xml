<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- XMemcached客户端 -->
    <bean name="xmemcachedClient" class="net.rubyeye.xmemcached.utils.XMemcachedClientFactoryBean"
          destroy-method="shutdown">
        <property name="servers" value="${MEMECACHED_SERVER}"/>
        <property name="weights" value="${MEMECACHED_SERVER_WEIGHT}"/>

        <!--主备切换-->
        <property name="failureMode" value="true"/>

        <!-- nio 连接池大小 -->
        <property name="connectionPoolSize" value="${MEMECACHED_CONNECTIONPOOL}"/>
        <!-- 使用二进制协议,默认是文本协议 -->
        <property name="commandFactory">
            <bean class="net.rubyeye.xmemcached.command.BinaryCommandFactory"/>
        </property>
        <!-- 使用一致性哈希,默认是Hash值取模 -->
        <property name="sessionLocator">
            <bean class="net.rubyeye.xmemcached.impl.KetamaMemcachedSessionLocator"/>
        </property>

        <!-- Serializing transcoder -->
        <property name="transcoder">
            <bean class="net.rubyeye.xmemcached.transcoders.SerializingTranscoder"/>
        </property>
        <!-- ByteBuffer allocator -->
        <property name="bufferAllocator">
            <bean class="net.rubyeye.xmemcached.buffer.SimpleBufferAllocator"></bean>
        </property>

    </bean>

    <!-- XMemcached的Wrapper -->
    <bean name="xmemcachedClientWrapper" class="com.cm.manage.cache.XMemcachedClientWrapper">
        <property name="memcachedClient" ref="xmemcachedClient"/>
    </bean>
</beans>